/**index.wxss**/

.btn-group {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx #333;
}

.btn-group .btn {
  flex-grow: 1;
  margin: 0 20rpx;
  text-align: center;
  line-height: 100rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.btn-group .btn.active {
  color: #d2281d;
  border-bottom: 6rpx solid #d2281d;
}

.img-wrapper {
  padding-top: 20rpx;
  position: absolute;
  top: 100rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}

.img-wrapper.active {
  z-index: 9;
}

.img-wrapper .img-scroll {
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.img-box {
  position: relative;
  margin-bottom: 20rpx;
  width: 100%;
  box-shadow: 0 0 10rpx #eee;
}

image {
  display: block;
  background-color: #eee;
  width: 100%;
}

.img-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding-left: 10rpx;
  background-color: rgba(50, 50, 50, 0.5);
  padding-bottom: 10rpx;
}

.icon-camera {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  background-color: transparent;
}

.img-info-link {
  display: inline-block;
  vertical-align: middle;
  color: #fff;
  font-size: 24rpx;
  font-weight: lighter;
}
