/**index.wxss**/

.btn-group {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx #333;
}

.btn-group .btn {
  flex-grow: 1;
  margin: 0 20rpx;
  text-align: center;
  line-height: 100rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.btn-group .btn.active {
  color: #d2281d;
  border-bottom: 6rpx solid #d2281d; 
}

.img-wrapper {
  padding-top: 20rpx;
  position: absolute;
  top: 100rpx;
  bottom: 0;
  left: 0;
  right: 0;
}

.img-wrapper .img-scroll {
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.img-box {
  margin-bottom: 20rpx;
  width: 100%;
  box-shadow: 0 0 10rpx #eee;
}

image {
  display: block;
  background-color: #eee;
  width: 100%;
}
